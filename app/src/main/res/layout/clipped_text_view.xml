<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="8dp"
    android:layout_margin="2dp"
    card_view:cardPreventCornerOverlap="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:text="Name"
        android:layout_marginLeft="2dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem Text !"
        android:clickable="true"
        android:id="@+id/clippedText"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/clippedText"
        android:layout_alignTop="@+id/clippedText"
        android:layout_alignBottom="@+id/clippedText"
        android:src="@drawable/com_facebook_tooltip_black_xout"
        android:layout_marginRight="20dp"
        android:clickable="true"
        android:id="@+id/copyClippedText"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:text="Date and time"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>