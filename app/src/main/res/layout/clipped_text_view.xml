<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:text="Name"
        android:layout_marginLeft="2dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem Text !"
        android:clickable="true"
        android:id="@+id/clippedText"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/clippedText"
        android:layout_alignTop="@+id/clippedText"
        android:layout_alignBottom="@+id/clippedText"
        android:src="@drawable/com_facebook_tooltip_black_xout"
        android:layout_marginRight="20dp"
        android:clickable="true"
        android:id="@+id/copyClippedText"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:text="Date and time"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"/>
</LinearLayout>